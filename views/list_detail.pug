extends layout

block content
    h1 
        a(href=list.user.url) #{list.user.name}: 
    h3 #{list.name}

    div(style='margin-left:20px;margin-top:20px')
        h4 Posts
        
        each postMediaArray in postMedia
            each post in postMediaArray
                if post[0] === undefined
                    p= post.title 
                    p #[em #{post.description}]
                    p #{post.created_formatted}
                else 
                    img(src=`data:image/${post[0].file.contentType};base64, ${post[0].file.data.toString('base64')}` width='300px' heigth='300px')

            hr
                   
           
            

