extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') List:
      input#name.form-control(type='text', placeholder='My list 1' name='name' value=(undefined===list ? '' : list.name))
    button.btn.btn-primary(type='Submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg